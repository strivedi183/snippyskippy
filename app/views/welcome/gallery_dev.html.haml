= form_tag '/' do
  = hidden_field_tag :client_id, @auth.client.id

= js extend_gritter(:position => :top_right, :fade_in_speed => "medium", :fade_out_speed => "slow")
= gflash


#user_dashboard
  = render(:partial => 'clients/dashboard')
#user_head_gradient

.row
  .large-12.columns
    #main{:role => 'main'}
      %ol#filters
        %li{"data-filter" => "short"} Short
        %li{"data-filter" => "long"} Long
        %li{"data-filter" => "curly"} Curly

.row
  .large-12.columns
    %ul#tiles
      %li.short
        .tile.draggable{:'data-medium-id' => 10 }
          .favorites
            .favorite_off
          .video= video_tag('sandip1.mov', :size => '200x283')
          .info
            %h5 cut by <span class="stylist">Vincenzo</span>

      %li.long
        .tile.draggable
          .favorites
            .favorite_off
          .video= video_tag('sandip2.mov', :size => '200x283')
          .info
            %h5 cut by <span class="stylist">Vincenzo</span>

      %li.curly
        .tile.draggable
          .favorites
            .favorite_off
          .video= image_tag('hair1.jpg', :size => '200x283')
          .info
            %h5 cut by <span class="stylist">Vincenzo</span>

      %li.curly
        .tile.draggable
          .favorites
            .favorite_off
          .video= video_tag('sandip5.mov', :size => '200x283')
          .info
            %h5 cut by <span class="stylist">Vincenzo</span>

      %li.long
        .tile.draggable
          .favorites
            .favorite_off
          .video= video_tag('sandip3.mov', :size => '200x283')
          .info
            %h5 cut by <span class="stylist">Vincenzo</span>

      %li.curly= image_tag('hair2.jpg', :size => '200x300')
      %li.curly= video_tag('sandip5.mov', :size => '200x283')
      %li.long=  video_tag('hop1.mov', :size => '200x283')
      %li.long=  video_tag('hop2.mov', :size => '200x283')
