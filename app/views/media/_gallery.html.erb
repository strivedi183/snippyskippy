<div id="main" role="main">

  <div class="row">
    <div class="large-8.columns">
      <div class='box'>
        <ol id="filters" class="filter_type" >
          <li data-filter='favorite'>favorites</li>
          <% @tags.uniq.each do |tag| %>
          <li data-filter='<%= tag %>'><%= tag %></li>
          <% end %>
        </ol>
      </div>
    </div>
  </div> <!-- end filter row -->


  <div class="row">
    <div class="large-12.columns">
      <ul id="tiles">
        <% @media.each do |medium| %>
        <li class="<%=medium.tags.map(&:tag).join(' ') %> <%= 'favorite' if medium.id.in?(@auth.client.favorites.map(&:medium_id)) %>">
          <div class="tile">
            <div>
              <% if medium.photo? %>
                <%= link_to image_tag(medium.photo.thumb, :size => '200x200', :class => 'video'), medium_path(medium.id), :data => { :colorbox => true, :colorbox_height => '600px', :colorbox_width => '600px', :colorbox_iframe => true} %>
              <% elsif medium.video? %>
                <%= link_to (image_tag('http://placehold.it/200x200', :class => 'video')), medium_path(medium.id), :data => { :colorbox => true, :colorbox_height => '600px', :colorbox_width => '600px', :colorbox_iframe => true } %>
              <% end %>
            </div>
            <div class="info">
              <h5>cut by <span class="stylist"><%= link_to(medium.stylist.user.name, "/stylists/#{medium.stylist.id}") %></span></h5>
              <div class="favorites" data-medium-id='<%= medium.id %>'>
                <% if medium.id.in?(@auth.client.favorites.map(&:medium_id)) %>
                <div class="favorite_on"></div>
                <% else %>
                <div class="favorite_off"></div>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </ul>

      </div>
    </div>


  </div> <!-- end main -->


