#clear_ranks.inline.float-right.up-40px
  = link_to('Clear All Ranks', clear_ranks_client_path , :class => 'button small orange', :method => 'post', :remote => true, :'data-clear-ranks' => true)
  - if @auth.client.rank_1.present? || @auth.client.rank_2.present? || @auth.client.rank_3.present?
    = link_to('POLL THIS', '/polls', :method => 'post', :class => 'button small orange')

#user_photo
  - if @auth.image.present?
    = image_tag(@auth.image, :size => '200x260')
  -else
    = link_to(image_tag('/assets/default_image.jpg', :size => '200x260'), '#', :"data-reveal-id" => "client")
  .tiny_spacer
  %h5.center.white.bold= @auth.client.user.name
#style1.style
  - if @auth.client.rank_1.present?
    - if @auth.client.rank_1.photo?
      = image_tag(@auth.client.rank_1.photo.thumb, :size => '150x200')
    - elsif @auth.client.rank_1.video?
      = image_tag(@auth.client.rank_1.video.thumb, :size => '150x200')
#style2.style
  - if @auth.client.rank_2.present?
    - if @auth.client.rank_2.photo?
      = image_tag(@auth.client.rank_2.photo.thumb, :size => '150x200')
    - elsif @auth.client.rank_2.video?
      = image_tag(@auth.client.rank_2.video.thumb, :size => '150x200')
#style3.style
  - if @auth.client.rank_3.present?
    - if @auth.client.rank_3.photo?
      = image_tag(@auth.client.rank_3.photo.thumb, :size => '150x200')
    - elsif @auth.client.rank_3.video?
      = image_tag(@auth.client.rank_3.video.thumb, :size => '150x200')

