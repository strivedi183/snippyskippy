.row
  %fieldset.forms
    %legend Stylist Registration
    .five.columns
      = form_for @user do |f|
        = f.label :name
        = f.text_field :name, :autofocus => true
        = f.label :email
        = f.text_field :email
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        = f.submit 'Create Account', :class => 'button radius success'
    .seven.columns